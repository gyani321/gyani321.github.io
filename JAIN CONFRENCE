            <form class="mt-4 space-y-4">
                <input type="text" placeholder="Member ID" class="w-full border rounded-md px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none" />
                <input type="password" placeholder="Password" class="w-full border rounded-md px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none" />
                <button type="submit" class="w-full px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700">Login</button>
            </form>
        </div>
    </div>
    <!-- Events Modal -->
    <div id="events-modal" class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center p-4 z-50 animate-scale-in">
        <div class="w-full max-w-lg bg-white rounded-xl shadow-2xl p-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-bold">Upcoming Events</h2>
                <button class="close-modal p-2 rounded-full hover:bg-gray-100"><i data-lucide="x"></i></button>
            </div>
            <div id="upcoming-events-list" class="mt-4 space-y-3 h-96 overflow-y-auto"></div>
        </div>
    </div>
  </template>
  <template id="wing-details-modal-template">
    <div class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center p-4 z-50 animate-scale-in">
        <div class="w-full max-w-md bg-white rounded-xl shadow-2xl p-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-bold" id="wing-title"></h2>
                <button class="close-modal p-2 rounded-full hover:bg-gray-100"><i data-lucide="x"></i></button>
            </div>
            <p class="mt-4 text-sm text-gray-600" id="wing-description"></p>
        </div>
    </div>
  </template>

  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
        const mainContent = document.getElementById('main-content');
        const modalContainer = document.getElementById('modal-container');
        const tabButtons = document.querySelectorAll('.tab-btn');

        const templates = {
            home: document.getElementById('home-template').innerHTML,
            jain: document.getElementById('jain-conference-template').innerHTML,
            shraman: document.getElementById('shraman-sangh-template').innerHTML,
            others: document.getElementById('others-template').innerHTML,
            registerMember: document.getElementById('register-member-modal-template').innerHTML,
            createEvent: document.getElementById('create-event-modal-template').innerHTML,
            quickActions: document.getElementById('quick-action-modals-template').innerHTML,
            wingDetails: document.getElementById('wing-details-modal-template').innerHTML,
        };

        const state = { 
            membershipCount: 1294,
            sants: [
                { name: 'Acharya Shri Vidyanand Ji', padvi: 'Acharya', parampara: 'Digambar', notableWork: 'Known for extensive writings on Jain philosophy and scriptures.' },
                { name: 'Upadhyay Praveen Rishi Ji', padvi: 'Upadhyay', parampara: 'Sthanakvasi', notableWork: 'Famous for his motivational pravachans and youth engagement.' },
                { name: 'Sadhvi Kanakprabha Shri Ji', padvi: 'Sadhvi Pramukha', parampara: 'Terapanth', notableWork: 'Led the Anuvrat movement and authored several books.' },
                { name: 'Muni Shri Tarunsagar Ji', padvi: 'Muni', parampara: 'Digambar', notableWork: 'Renowned for his "Kadve Pravachan" series, addressing social issues.' }
            ],
            csrProjects: [
                { title: 'Midday Meal Program for Schools', status: 'Active' },
                { title: 'Clean Water Initiative - Phase II', status: 'Planned' },
                { title: 'Vocational Training Center for Women', status: 'Completed' },
                { title: 'Afforestation Drive - Kolkata', status: 'Active' }
            ],
            events: [
                { name: 'Annual General Meeting', date: '2025-11-15', location: 'Kolkata, WB', type: 'Official' },
                { name: 'Youth Leadership Seminar', date: '2025-10-25', location: 'Online Webinar', type: 'Youth Wing' },
                { name: 'Paryushan Parv Pravachan Series', date: '2026-08-22', location: 'Live Stream', type: 'Religious' }
            ],
            socialActivities: [
                { title: 'Winter Blanket Distribution Drive', coordinator: 'Ankit Jain', participants: 45 },
                { title: 'Elderly Care Home Visit', coordinator: 'Priya Mehta', participants: 22 }
            ],
            bloodCamps: [
                { location: 'Shree Jain Sabha, Kolkata', date: '2025-12-07', partner: 'Red Cross Society' },
                { location: 'Terapanth Bhawan, Howrah', date: '2026-01-18', partner: 'State Blood Bank' }
            ],
            skillPrograms: [
                { name: 'Basic Computer Literacy for Seniors', duration: '6 Weeks', status: 'Ongoing' },
                { name: 'Advanced Tailoring & Design for Women', duration: '3 Months', status: 'Registrations Open' }
            ],
            wings: {
                youth: { title: 'Youth Wing', description: 'The Youth Wing focuses on empowering the next generation through leadership camps, skill development workshops, and social volunteering opportunities. Our goal is to foster a strong sense of community and responsibility among young members.' },
                women: { title: 'Women\'s Wing', description: 'The Women\'s Wing is dedicated to creating a supportive environment for women. We organize self-help groups, vocational training, health awareness camps, and cultural programs to promote empowerment and well-being.'}
            }
        };

        function showModal(templateHTML, onInit) {
            modalContainer.innerHTML = templateHTML;
            const modalNode = modalContainer.firstElementChild;
            initializeModal(modalNode);
            if(onInit) onInit(modalNode);
            lucide.createIcons();
        }

        function updateContent(targetId) {
            mainContent.innerHTML = '';
            modalContainer.innerHTML = '';

            if (targetId === '#home') {
                mainContent.innerHTML = templates.home;
            } else if (targetId === '#jain') {
                mainContent.innerHTML = templates.jain;
                document.getElementById('totalMembership').textContent = state.membershipCount;
                renderEventsList(mainContent);
                document.getElementById('registerMemberBtn').addEventListener('click', () => showModal(templates.registerMember));
                document.getElementById('createEventBtn').addEventListener('click', () => showModal(templates.createEvent));
            } else if (targetId === '#shraman') {
                mainContent.innerHTML = templates.home;
                showModal(templates.shraman, initializeShramanLogic);
            } else if (targetId === '#others') {
                mainContent.innerHTML = templates.home;
                showModal(templates.others, initializeOthersLogic);
            }
            lucide.createIcons();
        }
        
        // QUICK ACTIONS LOGIC
        function setupQuickActions() {
            document.getElementById('donateBtn').addEventListener('click', () => {
                showModal(templates.quickActions, (modal) => {
                    modal.querySelector('#donate-modal').classList.remove('hidden');
                    modal.querySelector('#donate-modal').classList.add('flex');
                });
            });
            document.getElementById('loginBtn').addEventListener('click', () => {
                showModal(templates.quickActions, (modal) => {
                    modal.querySelector('#login-modal').classList.remove('hidden');
                    modal.querySelector('#login-modal').classList.add('flex');
                });
            });
            document.getElementById('eventsBtn').addEventListener('click', () => {
                 showModal(templates.quickActions, (modal) => {
                    modal.querySelector('#events-modal').classList.remove('hidden');
                    modal.querySelector('#events-modal').classList.add('flex');
                    const container = modal.querySelector('#upcoming-events-list');
                    container.innerHTML = state.events.map(event => `
                        <div class="bg-gray-50 p-3 rounded-lg border animate-fade-in">
                            <p class="font-semibold text-sm">${event.name}</p>
                            <p class="text-xs text-gray-500 mt-1">${new Date(event.date).toLocaleDateString('en-IN', {dateStyle: 'full'})} - ${event.location}</p>
                        </div>`).join('');
                     lucide.createIcons();
                });
            });
            document.querySelectorAll('.wing-explore-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const wingKey = e.currentTarget.dataset.wing;
                    const wingData = state.wings[wingKey];
                    showModal(templates.wingDetails, (modal) => {
                        modal.querySelector('#wing-title').textContent = wingData.title;
                        modal.querySelector('#wing-description').textContent = wingData.description;
                    });
                });
            });
        }

        tabButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                tabButtons.forEach(btn => btn.setAttribute('aria-selected', 'false'));
                e.currentTarget.setAttribute('aria-selected', 'true');
                updateContent(e.currentTarget.dataset.target);
            });
        });

        function initializeModal(modalNode, onclose) {
            if (!modalNode) return;
            modalNode.querySelectorAll('.close-modal').forEach(btn => {
                btn.addEventListener('click', () => {
                    modalNode.remove();
                    if(onclose) onclose();
                });
            });
        }
        
        function initializeShramanLogic(modalNode) {
            initializeModal(modalNode, () => document.querySelector('[data-target="#home"]').click());
            
            const links = modalNode.querySelectorAll('.shraman-link');
            const contentEl = modalNode.querySelector('#ss-content');
            const paneTemplates = {
                '#ss-about': document.getElementById('ss-about-template').innerHTML,
                '#ss-sant-reg': document.getElementById('ss-sant-reg-template').innerHTML,
                '#ss-profiles': document.getElementById('ss-profiles-template').innerHTML,
                '#ss-vihar': document.getElementById('ss-vihar-template').innerHTML,
            };
            
            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    links.forEach(l => l.classList.remove('active'));
                    e.currentTarget.classList.add('active');
                    const targetId = e.currentTarget.dataset.target;
                    contentEl.innerHTML = paneTemplates[targetId] || `<p>Content not found.</p>`;
                    if (targetId === '#ss-profiles') renderSantList(contentEl);
                    if (targetId === '#ss-vihar') contentEl.querySelector('#addViharRouteBtn').addEventListener('click', () => alert('Modal for adding Vihar Route would open here.'));
                    lucide.createIcons();
                });
            });
            links[0].click();
        }

        function initializeOthersLogic(modalNode) {
            initializeModal(modalNode, () => document.querySelector('[data-target="#home"]').click());

            const links = modalNode.querySelectorAll('.others-link');
            const contentEl = modalNode.querySelector('#o-content');
            const paneTemplates = {
                '#o-csr': document.getElementById('o-csr-template').innerHTML,
                '#o-social': document.getElementById('o-social-template').innerHTML,
                '#o-blood': document.getElementById('o-blood-template').innerHTML,
                '#o-skills': document.getElementById('o-skills-template').innerHTML,
            };

            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    links.forEach(l => l.classList.remove('active'));
                    e.currentTarget.classList.add('active');
                    const targetId = e.currentTarget.dataset.target;
                    contentEl.innerHTML = paneTemplates[targetId] || `<p>Content not found.</p>`;
                    if (targetId === '#o-csr') {
                        renderCsrList(contentEl);
                        contentEl.querySelector('#createCsrProjectBtn').addEventListener('click', () => alert('Modal for creating CSR Project would open here.'));
                    }
                    if (targetId === '#o-social') {
                        renderSocialList(contentEl);
                         contentEl.querySelector('#addSocialActivityBtn').addEventListener('click', () => alert('Modal for adding Social Activity would open here.'));
                    }
                    if (targetId === '#o-blood') {
                        renderBloodCampList(contentEl);
                        contentEl.querySelector('#scheduleCampBtn').addEventListener('click', () => alert('Modal for scheduling a Blood Camp would open here.'));
                    }
                    if (targetId === '#o-skills') {
                        renderSkillProgramList(contentEl);
                        contentEl.querySelector('#createProgramBtn').addEventListener('click', () => alert('Modal for creating a Skill Program would open here.'));
                    }
                    lucide.createIcons();
                });
            });
            links[0].click();
        }

        function renderSantList(contentEl) {
            const container = contentEl.querySelector('#sant-list-container');
            container.innerHTML = state.sants.map(sant => `
                <div class="bg-white p-3 rounded-lg border animate-fade-in">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="font-semibold">${sant.name}</p>
                            <p class="text-xs text-gray-500">Parampara: ${sant.parampara} • Padvi: ${sant.padvi}</p>
                            <p class="text-xs text-gray-600 mt-1 italic">"${sant.notableWork}"</p>
                        </div>
                        <button class="text-xs px-2 py-1 rounded-md border bg-gray-100 hover:bg-gray-200">View</button>
                    </div>
                </div>`).join('');
        }

        function renderCsrList(contentEl) {
             const container = contentEl.querySelector('#csr-list-container');
             container.innerHTML = state.csrProjects.map(p => `
                <div class="bg-white p-3 rounded-lg border animate-fade-in">
                    <div class="flex justify-between items-center">
                       <p class="font-semibold text-sm">${p.title}</p>
                       <span class="text-xs font-medium px-2 py-1 rounded-full ${p.status === 'Active' ? 'bg-green-100 text-green-800' : p.status === 'Planned' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800'}">${p.status}</span>
                    </div>
                </div>`).join('');
        }

        function renderEventsList(contentEl) {
            const container = contentEl.querySelector('#event-list-container');
            if (!container) return;
            container.innerHTML = state.events.map(event => `
                <div class="bg-white p-3 rounded-lg border animate-fade-in">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="font-semibold">${event.name}</p>
                            <p class="text-xs text-gray-500 flex items-center gap-2 mt-1">
                                <i data-lucide="calendar" class="w-3 h-3"></i> ${new Date(event.date).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' })}
                                <span class="mx-1">|</span>
                                <i data-lucide="map-pin" class="w-3 h-3"></i> ${event.location}
                            </p>
                        </div>
                        <span class="text-xs font-medium px-2 py-1 rounded-full bg-blue-100 text-blue-800">${event.type}</span>
                    </div>
                </div>`).join('');
        }

        function renderSocialList(contentEl) {
            const container = contentEl.querySelector('#social-list-container');
            if (!container) return;
            container.innerHTML = state.socialActivities.map(activity => `
                <div class="bg-white p-3 rounded-lg border animate-fade-in">
                    <p class="font-semibold text-sm">${activity.title}</p>
                    <p class="text-xs text-gray-500 mt-1">Coordinator: ${activity.coordinator} • Participants: ${activity.participants}</p>
                </div>`).join('');
        }
        
        function renderBloodCampList(contentEl) {
            const container = contentEl.querySelector('#blood-camp-list-container');
            if (!container) return;
            container.innerHTML = state.bloodCamps.map(camp => `
                <div class="bg-white p-3 rounded-lg border animate-fade-in">
                    <p class="font-semibold text-sm">${camp.location}</p>
                    <p class="text-xs text-gray-500 mt-1">Date: ${new Date(camp.date).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' })} • Partner: ${camp.partner}</p>
                </div>`).join('');
        }

        function renderSkillProgramList(contentEl) {
            const container = contentEl.querySelector('#skill-program-list-container');
            if (!container) return;
            container.innerHTML = state.skillPrograms.map(program => `
                <div class="bg-white p-3 rounded-lg border animate-fade-in">
                     <div class="flex justify-between items-center">
                        <div>
                            <p class="font-semibold text-sm">${program.name}</p>
                            <p class="text-xs text-gray-500 mt-1">Duration: ${program.duration}</p>
                        </div>
                        <span class="text-xs font-medium px-2 py-1 rounded-full ${program.status === 'Ongoing' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}">${program.status}</span>
                    </div>
                </div>`).join('');
        }

        // Initial load
        document.querySelector('[data-target="#home"]').click();
        setupQuickActions();
    });
  </script>
</body>
</html>


